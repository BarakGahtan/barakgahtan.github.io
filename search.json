---
layout: null
---
[
  {% assign pages = site.pages | where_exp: "p", "p.title" %}
  {% assign publications = site.publications %}
  {% assign posts = site.posts %}
  {% assign all = pages | concat: publications | concat: posts %}
  {% for item in all %}
  {
    "title"   : {{ item.title | strip_html | jsonify }},
    "url"     : "{{ site.baseurl }}{{ item.url }}",
    "content" : {{ item.content | strip_html | truncatewords: 50 | jsonify | default: '""' }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
